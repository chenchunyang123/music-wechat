.b-ctrl {
    height: 100%;
    display: flex;
    align-items: center;
    background-color: #fff;
}

.b-item {
    flex: 1;
    text-align: center;
    color: #333;
    font-size: 32rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon {
    margin-right: 12rpx;
    font-size: 32rpx;
    position: relative;
    top: 2rpx;
}

.ft34 {
    font-size: 34rpx;
}

.b-comment {
    width: 560rpx;
    text-align: left;
    padding: 20rpx;
    font-size: 32rpx;
}

.b-send {
    background: #d81e06;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}

/* 分享样式 */
.share-btn {
    background-color: #fff;
    color: #333;
    padding: 0;
    height: 100%;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
}

.share-btn::after {
    display: none;
}

.share-hover::after {
    border: none;
}