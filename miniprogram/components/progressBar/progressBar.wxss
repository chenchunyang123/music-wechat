.p-container {
    display: flex;
    align-items: center;
}

.control {
    position: relative;
    flex: 1;
}

.movable-area {
    width: 100%;
    height: 34rpx;
    position: absolute;
    bottom: -14rpx;
    left: 0;
}

.movable-view {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    background-color: #fefefe;
}

.time {
    width: 64rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    line-height: 30rpx;
    font-weight: 400;
    color: #fff;
}