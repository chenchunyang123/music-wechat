page {
    background-color: #f1f1f1;
}

.b-card {
    padding: 20rpx;
    background-color: #fff;
}

.b-title {
    display: flex;
}

.b-userImg {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.b-box {
    flex: 1;
}

.b-time {
    font-size: 24rpx;
    color: #999;
}

.b-content {
    margin: 20rpx 0;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 1.5;
}

.b-imgWrap {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
}

.b-img {
    width: 230rpx;
    height: 230rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.b-img:nth-child(3n) {
    margin-right: 0;
}

.b-nickName {
    font-size: 32rpx;
}