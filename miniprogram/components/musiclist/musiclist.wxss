.m-container {
    display: flex;
    padding: 14rpx 20rpx;
    align-items: center;
}

.m-index {
    color: #888;
    font-size: 34rpx;
    width: 80rpx;
}

.m-info {
    flex-grow: 1;
    width: 0;
}

.m-name {
    font-size: 34rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 10rpx;
}

.m-alia {
    color: #888;
}

.m-singer {
    font-size: 24rpx;
    color: #888;
}

.playing view, .playing text{
    color: #d81e06;
}
